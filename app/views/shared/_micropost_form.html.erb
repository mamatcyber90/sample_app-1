<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", onkeydown: "textCounter()", onkeyup: "textCounter()" %>
  </div>
  <input type="text" border="0" style="width:170px" id="charactersCounter" readonly='readonly'/>
  <br>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

